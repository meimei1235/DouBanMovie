.container {
	background-color: #eee;
}
.container>image {
	flex: 1;
	margin: auto
}

.film-title {
	font-size: 18px;
	text-align: center;
	font-weight: bold;
}
text {
	font-size: 14px;
	line-height: 1.5rem;
	margin: 0 40rpx;
}
.film-description {
	display: flex;
	flex-direction: column;
}
.film-description>text:first-child {
	font-weight: bold;
}
.film-description>text:last-child {
	text-indent: 40rpx;
}
.film-actor {
	display: flex;
	margin-top: 10rpx;
}
.film-actor>view {
	display: flex;
	flex-direction: column;
}
.film-actor>text {
	margin-right: 0;
	/*vertical-align: middle;*/
	line-height: 110rpx;
}
.film-actor>view image{
	border-radius: 50%;
	width:40px;
	height:40px;
	margin: auto;
}
.actor-img {
	margin: 0 10rpx;
	text-align: center;
}
.actor-img>text {
	margin: 0;
}