.list-title {
	position: fixed;
	width: 100%;
	height:90rpx;
	text-align:center;
	line-height:90rpx;
	border-bottom: 1px solid #eee;
	background-color: #eee;
	z-index: 2;
}

.list-content {
	position:relative;
	top:46px;
	/*z-index:-1;*/
	display: flex;
	flex-direction: column;
}
.list-item {
	display: flex;
	flex: 1;
	/*height:104px;*/
	/*margin-bottom: 20rpx;*/
	padding: 15rpx 20rpx;
	overflow: hidden;
	border-bottom: 1px solid #eee;
}
.list-item image{
	width: 40%;
	height: 200rpx;
}
.list-item>view {
	flex: 1;
	height: 200rpx;
	margin-left:20rpx;
	line-height:1.4rem;
	overflow: hidden;
}
.item-comment {
	width: 60rpx;
	height: 40rpx;
	font-size: 20rpx;
	background-color: red;
	border-radius: 40%;
	color: #fff;
	text-align: center;
	line-height: 40rpx;
}
.item-title {
	display: flex;
	justify-content: space-between;
} 
.item-title>text:first-child, .list-text>view:last-child {
	overflow: hidden;
	text-overflow:ellipsis;
	white-space:nowrap;
}
.item-title ~ view {
	font-size: 14px;
}
.item-title>text:first-child {
	font-size: 16px;
	font-weight: bold;
}
.warning-text {
	color: red;
}